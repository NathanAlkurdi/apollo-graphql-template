{
    "name": "apollo-graphql-template",
    "version": "0.0.1",
    "description": "A template to kickstart an Apollo GraphQL server written in typescript.",
    "author": "Nathan Al-Kurdi",
    "license": "MIT",
    "type": "module",
    "main": "./dist/index.js",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/NathanAlkurdi/apollo-graphql-template.git"
    },
    "scripts": {
        "build": "yarn lint && tsc",
        "lint": "eslint \"{**/*,*}.{js,ts,jsx,tsx}\"",
        "lint:fix": "eslint \"{**/*,*}.{js,ts,jsx,tsx}\" --fix",
        "start": "yarn build && node dist/index.js",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "@apollo/server": "^4.3.0",
        "graphql": "^16.6.0"
    },
    "devDependencies": {
        "@types/node": "^18.11.18",
        "@typescript-eslint/eslint-plugin": "^5.48.0",
        "@typescript-eslint/parser": "^5.48.0",
        "eslint": "^8.31.0",
        "typescript": "^4.9.4"
    }
}
